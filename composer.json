{
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/EvilKraft/I18nRoutingServiceProvider.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "php -r \"shell_exec('mkdir -p web/components/AdminLTE');\"",
            "php -r \"shell_exec('rm -rf web/components/AdminLTE/*');\"",
            "php -r \"shell_exec('cp -rf vendor/almasaeed2010/adminlte/dist/    web/components/AdminLTE/');\"",
            "php -r \"shell_exec('cp -rf vendor/almasaeed2010/adminlte/plugins/ web/components/AdminLTE/');\"",

            "php -r \"shell_exec('mkdir -p web/components/bootstrap');\"",
            "php -r \"shell_exec('rm -rf web/components/bootstrap/*');\"",
            "php -r \"shell_exec('cp -rf vendor/twbs/bootstrap/dist/* web/components/bootstrap/');\""
        ],
        "post-update-cmd": [
            "php -r \"shell_exec('mkdir -p web/components/AdminLTE');\"",
            "php -r \"shell_exec('rm -rf web/components/AdminLTE/*');\"",
            "php -r \"shell_exec('cp -rf vendor/almasaeed2010/adminlte/dist/    web/components/AdminLTE/');\"",
            "php -r \"shell_exec('cp -rf vendor/almasaeed2010/adminlte/plugins/ web/components/AdminLTE/');\"",

            "php -r \"shell_exec('mkdir -p web/components/bootstrap');\"",
            "php -r \"shell_exec('rm -rf web/components/bootstrap/*');\"",
            "php -r \"shell_exec('cp -rf vendor/twbs/bootstrap/dist/* web/components/bootstrap/');\""
        ]
    },
    "require": {
        "silex/silex": "~1.3",
        "twig/twig": "^1.23",
        "doctrine/dbal": "~2.3",
        "dflydev/doctrine-orm-service-provider": "~1.0.6",
        "symfony/twig-bridge": "^3.0",
        "symfony/form": "^3.0",
        "symfony/security-csrf": "^3.0",
        "symfony/validator": "^3.0",
        "symfony/config": "^3.0",
        "symfony/yaml": "^3.0",
        "symfony/translation": "^3.0",
        "symfony/security": "^3.0",
        "monolog/monolog": "^1.17",
        "jeromemacias/silex-debug": "~1.0@dev",
        "silex/web-profiler": "^1.0",
        "sorien/silex-dbal-profiler": "~1.1",
        "swiftmailer/swiftmailer": "^5.4",
        "gedmo/doctrine-extensions": "dev-master",

        "symfony/doctrine-bridge": "~2.2",
        "saxulum/saxulum-doctrine-orm-manager-registry-provider": "~2.2",

        "jenyak/i18n-routing-service-provider": "~1.0@dev",

        "almasaeed2010/adminlte": "~2.0",
        "twbs/bootstrap": "^3.3",
        "symfony/finder": "^3.0"
    },
    "autoload": {
        "psr-0": {
            "App": "src/",
            "Entity": "src/App/",
            "Repository": "src/App/",
            "Form": "src/App/",
            "Gedmo": "vendor/gedmo/doctrine-extensions/lib/'"
        }
    }


}
